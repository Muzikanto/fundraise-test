{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "outDir": "./dist",

        "baseUrl": "./",

        "incremental": true,
        "declaration": false,

        "module": "CommonJS",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,

        "target": "ESNext",
        "lib": ["ESNext"],

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "allowJs": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist"]
}
